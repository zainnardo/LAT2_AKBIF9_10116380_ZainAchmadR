<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HomeActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/ic_header_profile"
        android:minHeight="?attr/actionBarSize"
        app:theme="@style/ThemeOverlay.AppCompat.ActionBar">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="15dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_side_menu" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="380dp"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_notification"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:id="@+id/relative1"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_profile_image"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_marginLeft="148dp"
            android:layout_marginTop="100dp"
            android:foregroundGravity="center"
            android:src="@drawable/zainar"
            app:civ_border_color="#FFFFFF"
            app:civ_border_width="5dp" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/relative1"
        android:id="@+id/relative2"
        android:layout_marginLeft="115dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/Text1"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_marginLeft="20dp"
            android:textColor="#43b3e6"

            android:textSize="20dp"
            android:text="Zain Achmad R"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/Text1"
            android:layout_marginLeft="45dp"
            android:layout_marginTop="5dp"
            android:text="Blood Type : B" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_below="@id/relative2"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content">
        <View
            android:layout_width="wrap_content"
            android:id="@+id/border"
            android:layout_height="1dp"
            android:background="#939597">

        </View>
        <TextView
            android:id="@+id/txt2"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/border"
            android:text="75"
            android:layout_marginLeft="50dp"
            android:textSize="25dp"
            android:textColor="#43b3e6"/>
        <TextView
            android:id="@+id/txt3"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt2"
            android:text="Blood Give"
            android:textAllCaps="true"
            android:layout_marginLeft="35dp"
            android:textSize="10dp"
            android:textColor="#404041"/>
        <TextView
            android:id="@+id/txt4"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt3"
            android:text="100"
            android:layout_marginLeft="95dp"
            android:textSize="25dp"
            android:textColor="#43b3e6"/>
        <TextView
            android:id="@+id/txt5"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt3"
            android:text="BLOOD RECEIVED"
            android:textAllCaps="true"
            android:layout_marginLeft="75dp"
            android:textSize="10dp"
            android:textColor="#404041"/>

        <TextView
            android:id="@+id/txt7"
            android:layout_width="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt4"
            android:text="THANKS"
            android:textAllCaps="true"
            android:layout_marginLeft="90dp"
            android:textSize="10dp"
            android:textColor="#404041"/>
        <TextView
            android:id="@+id/txt8"
            android:layout_width="wrap_content"
            android:layout_marginTop="3dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/txt4"
            android:text="334"
            android:layout_marginLeft="90dp"
            android:textSize="25dp"
            android:textColor="#43b3e6"/>
        <View
            android:layout_width="wrap_content"
            android:layout_below="@id/txt5"
            android:id="@+id/border2"
            android:layout_height="1dp"
            android:layout_marginTop="8dp"
            android:background="#939597">

        </View>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@id/relative2"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:id="@+id/relative3"
        android:layout_marginTop="90dp"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="80dp"
            android:id="@+id/button1"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_search_donor"
            android:layout_height="80dp"
            />

        <Button
            android:id="@+id/button"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:clickable="true"
            android:background="@drawable/ic_search_donor" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button1"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="40dp"
            android:id="@+id/text1"
            android:text="Search Donor"
            android:textStyle="bold"

            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/text2"
            android:layout_below="@id/text1"
            android:textSize="8dp"
            android:layout_marginLeft="40dp"
            android:text="Search donor near you"
            />
        <Button
            android:layout_width="80dp"
            android:id="@+id/button2"
            android:layout_toRightOf="@id/button1"
            android:layout_marginLeft="130dp"
            android:clickable="true"
            android:background="@drawable/ic_blood_needed"
            android:layout_height="80dp"
            />

        <TextView
            android:id="@+id/text3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_marginLeft="136dp"
            android:layout_marginTop="109dp"
            android:layout_toRightOf="@id/text2"
            android:text="4 Users Need Blood"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/text4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="129dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/text2"
            android:text="Blood Needed"
            android:textStyle="bold"

            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="10dp"
        android:layout_centerInParent="true"
        android:layout_below="@id/relative3"
        android:layout_marginTop="15dp">

        <Button
            android:id="@+id/button3"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="40dp"
            android:background="@drawable/ic_message"
            android:clickable="true" />


        <TextView
            android:id="@+id/textt1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/button3"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="10dp"
            android:text="Message"
            android:textStyle="bold"

            />

        <TextView
            android:id="@+id/textt2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/textt1"
            android:layout_marginLeft="50dp"
            android:text="5 New Message"
            android:textSize="8dp" />

        <Button
            android:id="@+id/button5"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginLeft="130dp"
            android:layout_toRightOf="@id/button3"
            android:background="@drawable/ic_donor_history" />

        <TextView
            android:id="@+id/textt3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="151dp"
            android:layout_marginTop="109dp"
            android:layout_toRightOf="@id/textt2"
            android:clickable="true"
            android:text="5 Give , 2 Received"
            android:textSize="8dp" />

        <TextView
            android:id="@+id/textt4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:layout_marginTop="90dp"
            android:layout_toRightOf="@id/textt2"
            android:text="Donor History"
            android:textStyle="bold"

            />
    </RelativeLayout>



</RelativeLayout>